<% form_tag({:action => 'listJobs'},:multipart => true) do %>
<table cellspacing="8">
  <tr>
    <td align="right">Enter Job ID:</td>
    <td align="left"><%= text_field 'job_id', 'id'%> </td>
  </tr>
  <tr> 
    <td align="right"> OR </td>
    <td></td>
  </tr>
  <tr>
    <td align="right"> Enter Email Address:</td>
    <td align="left"><%= text_field 'email_address', 'email'%> </td>
  </tr>
  <tr>
    <td align="left"><p>&nbsp;</p></td>
    <td align="left" valign="top"><%= submit_tag 'Search', :name=>'search' %></td>
  </tr>
</table>
<% end%>
